<Window x:Class="Ballspiel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ballspiel"
        mc:Ignorable="d"
        Title="BallSpiel Übung" Height="450" Width="800">
    <Grid>
        <Button Content="Start/Stop" Name="StartStopButton" HorizontalAlignment="Left" Margin="79,43,0,0" VerticalAlignment="Top" Click="StartStopButton_Click"/>
        <Label Content="0 Klicks" Name="Spielstandlabel" HorizontalAlignment="Left" Margin="89,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.494,-0.797"/>
        <Canvas Margin="175,10,10,10" Name="Spielplatz" Background="AliceBlue">
            <Ellipse Width="20" Height="20" Fill="Black" Canvas.Left="100" Canvas.Top="100" Name="Ball"></Ellipse>
        </Canvas>
    </Grid>
</Window>
